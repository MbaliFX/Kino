<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for DARK mode. -->
    <style name="Base.Theme.Kino" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color (backgrounds, action bars) -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Text/icons on top of Primary color -->

        <!-- Secondary brand color (accents, highlights, interactive elements) -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item> <!-- Text/icons on top of Secondary color -->

        <!-- Background color for the entire app -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/white</item> <!-- Default text color -->
        <item name="android:textColorHint">#A0A0A0</item> <!-- Hint text color (e.g., "Search...") -->

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Makes status bar icons (time, battery) light -->
    </style>

    <!-- The final theme for your app, which inherits everything -->
    <style name="Theme.Kino" parent="Base.Theme.Kino" />

</resources>
