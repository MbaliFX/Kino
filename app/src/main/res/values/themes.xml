<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. Define a shape style for sharp corners -->
    <style name="ShapeAppearance.App.Sharp" parent="">
        <item name="cornerSize">0dp</item>
    </style>

    <!-- 2. Create a custom button style that uses the sharp shape -->
    <style name="MySharpButtonStyle" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Sharp</item>
    </style>

    <!-- 3. Base application theme. All customizations go here. -->
    <style name="Base.Theme.Kino" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#E4E4E4</item>
        <item name="colorOnPrimary">@color/black</item> <!-- Text on a white button should be black -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">#00BCD4</item>
        <item name="colorOnSecondary">@color/white</item> <!-- Text on a blue button should be white -->

        <!-- Status bar color. Set to a light gray to see the icons. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- 4. Apply your custom button style to the whole app -->
        <item name="materialButtonStyle">@style/MySharpButtonStyle</item>
    </style>

    <!-- 5. The final theme for your app, which inherits everything -->
    <style name="Theme.Kino" parent="Base.Theme.Kino" />

</resources>
