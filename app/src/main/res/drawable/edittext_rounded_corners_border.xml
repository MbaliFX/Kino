<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the EditText (optional, you can make it transparent) -->
    <solid android:color="@android:color/white" />

    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black" />

    <!-- Adjust the radius to control the roundness of the corners -->
    <corners android:radius="8dp" />

    <!-- Optional: Add padding so the text isn't too close to the border -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
    